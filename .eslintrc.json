{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "indent": ["error", 4],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["error"],
        "max-params": [2, 4],
        "arrow-parens": 0
    }
}
