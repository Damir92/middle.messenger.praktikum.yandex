{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": [ "src/*" ],
        },
    },
    "exclude": [
        "node_modules"
    ]
  }
